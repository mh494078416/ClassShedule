<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:clickable="true"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/widget_4x1_bkg" android:gravity="right|center_vertical">
	
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="fill_parent">

		<LinearLayout android:orientation="vertical"
			android:layout_width="wrap_content" android:layout_height="wrap_content">
			<LinearLayout android:orientation="horizontal"
				android:layout_marginLeft="18dip"
				android:layout_marginTop="-2dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<ImageView android:id="@+id/HourLeftNumber"
					android:layout_marginLeft="3dip" android:layout_width="33.0dip"
					android:layout_height="80.0dip" android:scaleType="fitXY" />
				<ImageView android:id="@+id/HourRightNumber"
					android:layout_marginLeft="5dip" android:layout_width="33.0dip"
					android:layout_height="80.0dip" android:scaleType="fitXY" />
				<ImageView android:id="@+id/MinuteLeftNumber"
					android:layout_marginLeft="14dip" android:layout_width="33.0dip"
					android:layout_height="80.0dip" android:scaleType="fitXY" />
				<ImageView android:id="@+id/MinuteRightNumber"
					android:layout_marginLeft="5dip" android:layout_width="33.0dip"
					android:layout_height="80.0dip" android:scaleType="fitXY" />
			</LinearLayout>

			<LinearLayout android:orientation="horizontal"
				android:layout_marginLeft="32dip"
				android:layout_marginTop="-6dip"
				android:layout_width="wrap_content" android:layout_height="wrap_content">
				<TextView android:textSize="11.0dip" android:textColor="#FFFFFF"
					android:id="@+id/widgetDateTV" android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<TextView android:textSize="13.0dip" android:textColor="#FFFFFF"
					android:id="@+id/widgetWeekTV" android:paddingLeft="10dip"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />

			</LinearLayout>
		</LinearLayout>

		<LinearLayout android:orientation="vertical"
			android:layout_marginLeft="10dip" android:layout_marginTop="22dip"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:layout_x="190.0dip" android:layout_y="27.0dip">

			<TextView android:textSize="12.0dip" android:textColor="#FFFFFF"
				android:id="@+id/sequenceTV1" android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
			<LinearLayout android:orientation="horizontal"
				android:layout_width="wrap_content" android:layout_height="wrap_content">
				<TextView android:textSize="13.0dip" android:textColor="#FFFFFF"
					android:id="@+id/subjectTV1" android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<TextView android:textSize="13.0dip" android:textColor="#FFFFFF"
					android:id="@+id/placeTV1" android:paddingLeft="10dip"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />

			</LinearLayout>
			<TextView android:textSize="12.0dip" android:textColor="#FFFFFF"
				android:id="@+id/sequenceTV2" android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
			<LinearLayout android:orientation="horizontal"
				android:layout_width="wrap_content" android:layout_height="wrap_content">
				<TextView android:textSize="13.0dip" android:textColor="#FFFFFF"
					android:id="@+id/subjectTV2" android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<TextView android:textSize="13.0dip" android:textColor="#FFFFFF"
					android:id="@+id/placeTV2" android:paddingLeft="10dip"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />
			</LinearLayout>
		</LinearLayout>

	</LinearLayout>


	<LinearLayout android:orientation="horizontal" android:id="@+id/HotAreaDownLayout"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<ImageView android:id="@+id/TextInfoLeftHotArea"
			android:background="@drawable/image_press" android:clickable="true"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:scaleType="fitXY" android:layout_weight="0.44" />
		<ImageView android:id="@+id/TextInfoRightHotArea"
			android:background="@drawable/image_press" android:clickable="true"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:scaleType="fitXY" android:layout_weight="0.56" />
	</LinearLayout>


</FrameLayout>

